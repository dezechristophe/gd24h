<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.deze.depart" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Golf des 24 heures</name>
    <description>
Application du golf des 24 heures   
 </description>
    <author email="christophedeze@gmail.com" href="http://golfdes24heures.fr">
        Golf des 24 heures
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
                <icon src="icon.png" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
        <icon src="icon.png" />

</widget>
